{
  "name": "build-tool",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "config": {
    "proxy": "localhost"
  },
  "scripts": {
    "autoprefixer": "postcss --use autoprefixer -r --no-map ./dist/css/main.css",
    "browsersync": "browser-sync start --no-open --reload-delay 1000 --reload-debounce --proxy $npm_package_config_proxy --files './dist/css/main.css' './dist/js/main.js' './public/html/*.html'",
    "build:css": "node-sass -o ./dist/css/ ./src/scss/main.scss && npm run autoprefixer",
    "build:js": "webpack -p --config webpack.config.js",
    "clean:css": "cleancss --compatibility ie9 -o ./dist/css/main.min.css ./dist/css/main.css",
    "dev": "environment=dev npm run firstrun & npm run watch:all & npm run browsersync",
    "dist": "environment=dist npm run build:js && npm run build:css && npm run autoprefixer && npm run mqpacker && npm run clean:css",
    "mqpacker": "mqpacker -s ./dist/css/main.css ./dist/css/main.css",
    "firstrun": "npm run build:css && npm run build:js",
    "watch:all": "npm-run-all -p watch:css watch:js",
    "watch:css": "onchange './src/scss/*' -- npm run build:css",
    "watch:js": "onchange './src/js/*' -- npm run build:js"
  },
  "author": "Alessandro Muraro <akmuraro@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^6.7.7",
    "babel-core": "^6.24.0",
    "babel-eslint": "^6.1.2",
    "babel-loader": "^6.4.1",
    "babel-preset-latest": "^6.24.0",
    "babel-preset-stage-3": "^6.24.1",
    "browser-sync": "^2.18.8",
    "clean-css-cli": "^4.0.12",
    "css-mqpacker": "^5.0.1",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.1.3",
    "eslint-plugin-import": "^2.2.0",
    "node-sass": "^4.5.1",
    "npm-run-all": "^4.0.2",
    "onchange": "^3.2.1",
    "path": "^0.12.7",
    "postcss": "^5.2.16",
    "postcss-cli": "^3.0.0",
    "stylelint": "^7.10.1",
    "stylelint-order": "^0.4.3",
    "unminified-webpack-plugin": "^1.2.0",
    "webpack": "^2.3.2"
  },
  "browserslist": [
    "> 1%",
    "last 4 versions"
  ],
  "dependencies": {
    "jquery": "^3.2.1"
  }
}
