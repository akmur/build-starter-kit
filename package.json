{
  "name": "build-tool",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "autoprefixer": "postcss -c ./postcss.json -u autoprefixer -r ./dist/css/main.css",
    "browsersync": "browser-sync start --no-open --reload-delay 1000 --reload-debounce --proxy 'localhost/webpack-test' --files './dist/css/*.css' './dist/js/*.js' './index.html'",
    "build:css": "node-sass --output-style compressed -o ./dist/css ./src/scss/main.scss && npm run autoprefixer",
    "build:js": "webpack -p --config webpack.config.js",
    "dev": "npm run watch:all & npm run browsersync",
    "dist": "npm run build:js && npm run build:css && npm run autoprefixer && npm run mqpacker",
    "mqpacker": "mqpacker --sourcemap -s ./dist/css/main.css ./dist/css/main.css",
    "watch:all": "npm-run-all -p watch:css watch:js",
    "watch:css": "onchange './src/scss/*' -- npm run build:css",
    "watch:js": "onchange './src/js/*' -- npm run build:js"
  },
  "author": "Alessandro Muraro <akmuraro@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^6.7.7",
    "babel-core": "^6.24.0",
    "babel-loader": "^6.4.1",
    "babel-preset-latest": "^6.24.0",
    "browser-sync": "^2.18.8",
    "css-mqpacker": "^5.0.1",
    "node-sass": "^4.5.1",
    "npm-run-all": "^4.0.2",
    "onchange": "^3.2.1",
    "path": "^0.12.7",
    "postcss": "^5.2.16",
    "postcss-cli": "^3.0.0",
    "webpack": "^2.3.2"
  },
  "dependencies": {
    "jquery": "^3.2.1"
  }
}
